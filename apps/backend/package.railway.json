{
  "name": "pantum-coupon-backend",
  "version": "1.0.0",
  "description": "Pantum Coupon System Backend API",
  "main": "dist/server.js",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "start": "node dist/server.js",
    "build": "prisma generate && rimraf dist && tsc && npm run copy-assets",
    "copy-assets": "copyfiles -f src/templates/**/* dist/templates/email",
    "railway:deploy": "prisma db push && npm run seed && npm start",
    "seed": "npx tsx prisma/seed.ts",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.13",
    "prisma": "^5.22.0",
    "winston": "^3.12.0",
    "zod": "^3.22.4",
    "copyfiles": "^2.4.1",
    "rimraf": "^5.0.5",
    "typescript": "^5.4.3",
    "tsx": "^4.7.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.30",
    "@types/nodemailer": "^6.4.14"
  }
}