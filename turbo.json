{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "apps/backend/dist/**"],
      "env": [
        "DATABASE_URL",
        "JWT_SECRET", 
        "JWT_EXPIRES_IN",
        "PORT",
        "NODE_ENV",
        "SMTP_HOST",
        "SMTP_PORT", 
        "SMTP_USER",
        "SMTP_PASS",
        "FROM_EMAIL",
        "FROM_NAME",
        "DEMO_MODE",
        "FRONTEND_URL"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    },
    "seed": {
      "cache": false
    },
    "clean": {
      "cache": false
    }
  }
}