{
  "version": 2,
  "builds": [
    {
      "src": "apps/frontend/package.json",
      "use": "@vercel/next",
      "config": {
        "distDir": ".next"
      }
    },
    {
      "src": "apps/backend/src/server.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "apps/backend/prisma/schema.prisma",
          "apps/backend/src/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "apps/backend/src/server.ts"
    },
    {
      "src": "/(.*)",
      "dest": "apps/frontend/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}